<div data-bind="template: { name: 'item-template', foreach: items }"></div>

<div id="emptyListMessage">
    <span data-bind="visible: items().length == 0">
        ingen varer på handlelista
    </span>
</div>

<fieldset>
    <legend></legend>
    <p>
        <input id="addNewItemInputField" type="text" data-bind="value: newItemText" placeholder="ny vare" />
        <button id="addNewItemButton" data-bind="click: addNewItem" data-icon="plus" data-inline="true">legg til</button>
    </p>
</fieldset>

<h3>handlet inn allerede:</h3>

<table width="100%">
    <tbody data-bind="foreach: itemsInShoppingCart">
        <tr>
