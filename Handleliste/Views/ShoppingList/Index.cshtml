@{
    ViewBag.Title = "Handleliste";
}

<script type="text/html" id="item-template">
    <div class="item" data-bind="click: moveToShoppingCart">
        <span data-bind="text: name" /> 
        <div class="addedWhen">
            lagt til <span data-bind="text: createdWhen" />
        </div>
    </div>
</script>

<h1>handleliste:</h1>

